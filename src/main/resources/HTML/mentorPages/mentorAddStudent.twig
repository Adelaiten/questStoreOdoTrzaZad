{% extends "mentorIndexPage.twig" %}

{% block content %}

        <div class="container-internal">
            <h1>Here you can add new codecooler:</h1>
            </div>
        <form method="post">
            <div class="column">
                <fieldset class="first-table menu-internal">
                    <ul>
                        <li><label>
                            First name:
                            <input class="input" type="text" name="name">
                        </label></li>
                        <li><label>
                            Surname:
                            <input class="input" type="text" name="lastName">
                        </label></li>
                        <li><label>
                            Nickname:
                            <input class="input" type="text" name="nickname">
                        </label></li>
                    </ul>
                </fieldset><div class="separator">
                <input class="btn" type="submit" value="Submit">
                </div><fieldset class="second-table menu-internal">
                    <ul>
                        <li><label>
                            Email:
                            <input class="input" type="text" name="email">
                        </label></li>
                        <li><label>
                            Password:
                            <input class="input" type="password" name="password">
                        </label></li>
                    </ul>
                </fieldset>
            </div>
        </form>
    </div>
{% endblock %}