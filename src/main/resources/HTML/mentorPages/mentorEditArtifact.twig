{% extends "mentorIndexPage.twig" %}

{% block content %}

    <div class="container-internal">
            <header>
            <h1>Edit artifact:</h1>
            </header>

        <form method="post">
            <div class="column">
                <fieldset class="first-table menu-internal">
                    <ul>
                        <li><label>
                            Old artifact ID:
                            <input class="input" type="number" name="artifactId" required>
                        </label></li>
                        <li><label>
                            New artifact description:
                            <input class="input" type="text" name="artifactName" required>
                        </label></li>
                    </ul>
                </fieldset><div class="separator">
                <input class="btn" type="submit" value="Submit">
                </div><fieldset class="second-table menu-internal">
                    <ul>
                        <li><label>
                            New artifact description:
                            <input class="input" type="text" name="artifactDesc" required>
                        </label></li>
                        <li><label>
                            New artifact price:
                            <input class="input" type="number" name="artifactPrice" required>
                        </label></li>
                    </ul>
                </fieldset>
            </div>
        </form>
    </div>
{% endblock %}