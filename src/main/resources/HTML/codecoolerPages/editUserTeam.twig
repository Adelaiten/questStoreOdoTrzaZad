{% extends "codecoolerIndex.twig" %}

{% block content %}
<section class = "container-internal">
        <div class = "coin-picker">
            <span class = "nickname">{{ codecoolerModel.getNickname() }}</span>
            <img src = "../static/assets/images/coolcoin.png" class = "coolcoinIcon">
            <div class = "coins">
                <span class = "coins-now">Your coolcoins: {{ codecoolerModel.getCoolcoins() }}</span>
                <span class = "coins-ever-owned">Coolcoins ever owned: {{ codecoolerModel.getCoolcoinsEverEarned() }}</span>
            </div>

            <img src = "../static/assets/images/questIcon.png" class = "questIcon">
            <div class = "quest-in-progress">
                <span class = "quest">Quest in progress: {{ codecoolerModel.getQuestInProgress() }}</span>
            </div>

            <img src = "../static/assets/images/teamIcon.png" class = "teamIcon">
            <div class = "team-class">
                <span class = "class">Your class: {{ codecoolerModel.getRoom() }}</span>
                <span class = "team">Your team: {{ codecoolerModel.getTeamID() }}</span>
            </div>
        </div>
    <div class = "main">

    <div class = "teams">
            <span class = "your-team">Your team ID: {{ team }}</span>
        <table class = "table-team">
            <tr class = "first-row"> <th>ID</th> <th class = "right-cell">Team Name</th> </tr>
            {% for team in teamsList %}
               <tr><td> {{ team.getId() }} </td><td> {{ team.getTeamName() }} </td></tr>
            {% endfor %}
        </table>
        </div>
        <div class = "change-team">
                <form method = "post" enctype="text/plain">
                    <p style = "color: #fff">TEAM ID</p>
                    <input type="text" name="team-name" placeholder = "TEAM NAME" id = "artifact-id" required><br>
                    <input type="submit" value="Change Team"  class = "button" id = "mysubmit">
                </form>

        </div>
</div>
</section>
{% endblock %}
